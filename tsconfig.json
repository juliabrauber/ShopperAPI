{
  "compilerOptions": {
    "target": "es6",                        
    "module": "commonjs",                   
    "strict": true,                         
    "esModuleInterop": true,              
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",                     
    "rootDir": "./src",                      
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*", "config.d.ts"],
  "exclude": ["node_modules", "dist"] 
}
